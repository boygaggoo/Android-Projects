<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edimaudo.technicolorboxes.MainActivity"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:weightSum="4"
        android:layout_marginTop="150dp"
        android:id="@+id/firstLayer"
        android:orientation="horizontal"
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_height">
        
        <TextView
            android:layout_weight="1"
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView

            android:id="@+id/textView2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_below="@id/firstLayer"
        android:id="@+id/secondLayer"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_height">

        <TextView
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_below="@id/secondLayer"
        android:id="@+id/thirdLayer"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_height">

        <TextView
            android:id="@+id/textView9"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_below="@id/thirdLayer"
        android:id="@+id/fourthLayer"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_height">

        <TextView
            android:id="@+id/textView13"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/box_height"/>
    </LinearLayout>





</RelativeLayout>

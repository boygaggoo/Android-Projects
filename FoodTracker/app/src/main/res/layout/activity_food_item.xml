<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_food_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edimaudo.foodtracker.FoodItem">


    <EditText
        android:id="@+id/foodName"
        android:layout_marginTop="32dp"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:hint="@string/hint"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_marginTop="32dp"
        android:layout_below="@+id/foodName"
        android:layout_gravity="center"
        android:src="@drawable/ic_photo_library_black_48dp"
        android:id="@+id/galleryOption"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


    <RatingBar
        android:max="5"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/galleryOption"
        android:id="@+id/foodRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:padding="10dp"
        android:textSize="25sp"
        android:text="@string/submit"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/foodRating"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/submitFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>

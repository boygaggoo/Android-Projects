<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edimaudo.checkboxes.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="167dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dog"
        android:id="@+id/dogCheckBox"
        android:layout_marginTop="53dp"
        android:checked="false"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/catCheckBox"
        android:layout_alignStart="@+id/catCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cat"
        android:id="@+id/catCheckBox"
        android:checked="false"
        android:textSize="20sp"
        android:layout_below="@+id/dogCheckBox"
        android:layout_alignLeft="@+id/parrotCheckBox"
        android:layout_alignStart="@+id/parrotCheckBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parrot"
        android:id="@+id/parrotCheckBox"
        android:layout_below="@+id/catCheckBox"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check Box output"
        android:id="@+id/checkBoxButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outputText"
        android:layout_alignTop="@+id/editText"
        android:layout_alignRight="@+id/checkBoxButton"
        android:layout_alignEnd="@+id/checkBoxButton"
        android:layout_marginTop="60dp"
        android:layout_alignLeft="@+id/checkBoxButton"
        android:layout_alignStart="@+id/checkBoxButton"
        android:textSize="20sp" />
</RelativeLayout>

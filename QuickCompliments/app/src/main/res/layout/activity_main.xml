<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edimaudo.quickcompliments.MainActivity">

    <TextView
        android:text="@string/submission_blurb"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/submit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

    <TextView
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/blurb"
        android:textSize="35sp"
        android:textColor="@color/colorBlack"
        android:id="@+id/compliment_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

    <TextView
        android:text="@string/other_blurb"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:id="@+id/blurb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/editText"/>

    <LinearLayout
        android:id="@+id/info_holder"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <EditText
        android:textSize="25sp"
        android:inputType="text"
        android:hint="@string/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/button"
        android:layout_toStartOf="@+id/button"/>

    <Button
        android:theme="@style/buttonStyle"
        android:elevation="8dp"
        android:textSize="25sp"
        android:text="@string/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/info_holder"
        android:layout_alignEnd="@+id/info_holder"/>
</RelativeLayout>
